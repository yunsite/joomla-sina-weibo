<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="content">
	<name>Content - Weibo</name>
	<author>YuLei</author>
	<creationDate>Feb 2011</creationDate>
	<copyright>Copyleft (C) 2011 YuLei. No  rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>yulei_vsc@yahoo.com.cn</authorEmail>
	<authorUrl>http://blog.sina.com.cn/yuleishanghai</authorUrl>
	<version>0.4.0</version>
	<description>DESCCONTENTWEIBO</description>
	<files>
		<filename plugin="weibo">weibo.php</filename>
		<filename plugin="weibo">weibo.sina.php</filename>
		<filename plugin="weibo">weibo-sina.ico</filename>
	</files>
	<languages>
		<language tag="zh-CN">zh-CN.plg_content_weibo.ini</language>
	</languages>

	<params>
		<param name="sinaenabled" type="radio" default="1" label="Enable Sina Weibo" description="PARAMENABLEDSINA">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="catid" type="category" 
			label="Category" description="PARAMCATEGORY" />
		<param name="account" type="text" size="20" label="Account" description="PARAMACCOUNTNAME">
		</param>
		<param name="password" type="password" size="20" label="Password" description="PARAMACCOUNTPASSWORD">
		</param>
		<param name="picsend" type="radio" default="1" label="Enable Image" description="PARAMSENDPIC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="weibotype" type="list" label="WeiboType" default="custom" description="PARAMWEIBOTYPE">
			<option value="fulltext">Full Text</option>
			<option value="introtext">Intro Text</option>
			<option value="onlytitle">Only Title</option>
			<option value="custom">Custom</option>
		</param>
		<param name="customstring" type="text" size="30" default="发表了题为《%T》的博文" label="customstring" description="PARAMCUSTOMSTRING">
		</param>		
		<param name="@spacer" type="spacer" default="" label="" description="" value="aaaaaaaa" />
		<param name="sinabuttonenabled" type="radio" default="1" label="Enable Sina Weibo Button" description="PARAMBUTTONSINA">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="buttoncatid" type="category" 
			label="Category" description="PARAMBUTTONCATEGORY" />
		<param name="buttonpos" type="radio" default="bottom" label="Button Position">
			<option value="top">Top</option>
			<option value="bottom">Bottom</option>
		</param>
		<param name="buttonalign" type="radio" default="left" label="Button Align">
			<option value="left">Left</option>
			<option value="center">Center</option>
			<option value="right">Right</option>
		</param>
		<param name="buttonlabel" type="text" size="30" default="" label="Button Label" description="PARAMBUTTONLABEL" />
		<param name="fenxiangstring" type="text" size="30" default="分享题为《%T》的博文" label="Custom Button String" description="PARAMCUSTOMSTRING" />
	</params>
</install>
